<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuLayout"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@drawable/menubg"> <!-- your green side image -->

    <ImageButton
        android:id="@+id/menubackbtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/menuback" />

    <ImageButton
        android:id="@+id/hometextbtn"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/hometext" />

    <ImageButton
        android:id="@+id/menutextbtn"
        android:layout_width="66dp"
        android:layout_height="19dp"
        android:layout_below="@id/hometextbtn"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/menutextbtn" />

    <ImageButton
        android:id="@+id/profiletextbtn"
        android:layout_width="68dp"
        android:layout_height="18dp"
        android:layout_below="@id/menutextbtn"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/profiletextbtn" />

    <ImageButton
        android:id="@+id/abouttextbtn"
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:layout_below="@id/profiletextbtn"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/aboutext" />

    <ImageButton
        android:id="@+id/settingstextbtn"
        android:layout_width="83dp"
        android:layout_height="24dp"
        android:layout_below="@id/abouttextbtn"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/settingstext" />
</RelativeLayout>
